{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "declarationDir": "_build/dts",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "paths": {
            "backbone": ["src/@types/backbone"]
        }
    },
    "include": [
        "src/*",
        "src/**/*"
    ]
}
